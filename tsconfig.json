{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@myfusionhelper/ui": ["packages/ui/src"],
      "@myfusionhelper/types": ["packages/types/src"],
      "@myfusionhelper/config": ["packages/config"]
    }
  },
  "exclude": ["node_modules"]
}
